<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="map_navigation_section">
        <item name="android:textColor">#000</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="navigation_info">
        <item name="android:textColor">#000</item>
    </style>

    <style name="navigation_info_land" parent="navigation_info">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:paddingEnd">8dp</item>

        <item name="autoSizeMaxTextSize">24sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">8sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
    </style>

    <style name="dialog_label_login" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="dialog_edit_text_login" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="dialog_label_registration" parent="dialog_label_login"/>

    <style name="dialog_edit_text_registration" parent="dialog_edit_text_login"/>

</resources>
